<div class="col-sm-4 offset-sm-4 text-center">
  <h2 class="my-5">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
    <% end %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mb-3" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary mb-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
